<section class="group new-events clearfix">
  <header class="group-header with-hr clearfix">
    <h1 class="group-title">创建活动</h1>
  </header>
  <div class="events-wrap clearfix">
    <div class="file-upload">
      <div class="cover">
      </div>
      <div class="cover-upload">
        <div class="upload-cover">
          <span>上传封面</span>
          <span class="upload icon"></span>
          <input id="events_cover" type="file" name="pic" accept="image/*" required="false">
        </div>
      </div>
    </div>
    <form class="file-info form-default">
      <div class="title clearfix">
        <label>活动标题</label>
        <input type="text">
      </div>
      <div class="time clearfix">
        <label>活动时间</label>
          <input id="start_time" type="text" placeholder="2015-11-11 08:20">
          <span>~</span>
          <input id="end_time" type="text" placeholder="2015-11-11 16:20">
      </div>
      <div class="introduction clearfix">
        <label>活动介绍</label>
        <textarea></textarea>
      </div>
      <div class="btn-operate clearfix">
        <a href="#" class="btn-default btn-warning">创建活动</a>
        <a href="#" class="btn-default btn-delete">删除活动</a>
      </div>
    </form>
  </div>
</section>
