<h3>创建活动</h3>

<div class="row slide-form-container">
  <%= form_for @event, html: {id: 'create_event_form'} do |f| %>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :header, "活动主题", for: "header" %>
        <%= f.text_field :header, placeholder: '活动主题', class: "form-control", required: true, id: "header", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :content, "活动详情", for: "content" %>
        <%= f.text_area :content, placeholder: "活动详情", class: "form-control", required: true, id: "event-content" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :cover, "上传活动封面" %>
        <%= f.file_field :cover, accept: 'image/gif, image/png, image/jpeg', required: false, class: "form-control" %>
        <small>注意：目前仅支持JGP/GIF/PNG格式文件</small>
      </div>


      <div class="form-group">
        <%= f.submit "保存", class: "btn btn-primary" %>
      </div>

    </div>
  <% end %>
</div>
