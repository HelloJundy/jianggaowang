<% content_for :title do %>
  首页
<% end %>

<section class="panel">
  <header class="panel-header pure-g clearfix">
    <h4 class="panel-title pure-u-1-2">最新活动</h4>
    <%= link_to "查看全部", events_path, class: "panel-link pure-u-1-2" %>
  </header>

  <ul class="card-list pure-g">
    <% if @events.any? %>
      <%= render partial: "events/event_item", collection: @events, as: :event %>
    <% else %>
      <div class="pure-u-1">没有活动。</div>
    <% end %>
  </ul>
</section>

